# Grid System
BYTEBOT_GRID_OVERLAY=true
BYTEBOT_GRID_DEBUG=false

# Smart Focus System
BYTEBOT_SMART_FOCUS=true
BYTEBOT_OVERVIEW_GRID=200
BYTEBOT_REGION_GRID=50
BYTEBOT_FOCUSED_GRID=25
BYTEBOT_SEARCH_DEPTH=4

# LLM Configuration for Smart Focus
# Option 1: OpenAI direct
BYTEBOT_LLM_PROXY_URL=https://api.openai.com/v1/chat/completions
BYTEBOT_SMART_FOCUS_MODEL=gpt-4-vision-preview
OPENAI_API_KEY=your_openai_api_key_here

# Option 2: Local proxy (uncomment to use)
# BYTEBOT_LLM_PROXY_URL=http://localhost:8080/v1/chat/completions
# BYTEBOT_SMART_FOCUS_MODEL=gpt-4-vision-preview

# Performance Settings
BYTEBOT_CACHE_SCREENSHOTS=true
BYTEBOT_CACHE_TTL=100
